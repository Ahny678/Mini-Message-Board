<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Messages</h1>
    
    <% messages.forEach(function(message) { %>
      <div class="message">
        <!-- <p><strong><%= message.id %></strong></p> -->
        <p><strong><%= message.title %></strong></p>
        <p><em><%= message.date %></em></p>
        <p><%= message.text %></p>
        <a href="/<%= message.id %>/update">Update message</a>
      </div>
      <form action="/<%= message.id %>/delete" method="POST">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this message?');">Delete</button>
      </form>
    <% }); %>

    <h2>Post new message</h2>
   <a href="/newMessage"> <button>POST</button></a>
  </body>
</html>

